{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths": [
            "src/test/features/*.feature"
        ],
        "dryRun": false,
        "require": [
            "src/test/steps/*.ts",
            "src/hooks/hooks.ts",
            "src/helper/helper.ts",
            "src/testUtils/jiraApi.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar",
            "html:test-results/reports/cucumber-report.html",
            "json:test-results/reports/cucumber-report.json"
        ],
        "timeout": 600000
        
    }
}
